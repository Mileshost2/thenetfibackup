    <script>
        document.getElementById('country').addEventListener('change', getCurrency);
      
      function getCurrency() {
          const country = document.getElementById("country").value;
          const baseCurrencyInput = document.getElementById("basecurrency");
          const currencySymbolInput = document.getElementById("currencySymbol");
      
          if (country) {
              // Fetch country data from REST Countries API
              fetch(`https://restcountries.com/v3.1/name/${country}`)
                  .then(response => response.json())
                  .then(data => {
                      // Extract currency information
                      const currencies = data[0].currencies;
                      const currencyKey = Object.keys(currencies)[0];
                      const currencySymbol = currencies[currencyKey].symbol;
      
                      // Set the currency code and symbol in the respective input fields
                      baseCurrencyInput.value = currencyKey;
                      currencySymbolInput.value = currencySymbol;
                  })
                  .catch(error => {
                      console.error("Error fetching country data:", error);
                      baseCurrencyInput.value = "";
                      currencySymbolInput.value = "";
                  });
          } else {
              baseCurrencyInput.value = "";
              currencySymbolInput.value = "";
          }
      }
      
      </script>
