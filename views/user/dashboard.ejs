<script>
    const cryptoAPI = "https://api.coingecko.com/api/v3/simple/price";
    const alphaVantageAPI = "https://www.alphavantage.co/query";
    const alphaVantageKey = "YOUR_ALPHAVANTAGE_API_KEY"; // Replace with your API key

    // Fetch prices for cryptocurrencies from CoinGecko
    async function fetchCryptoPrices(assets) {
        const symbols = assets.map(asset => asset.dataset.symbol).join(",");
        const url = `${cryptoAPI}?ids=${symbols}&vs_currencies=usd`;
        
        try {
            const response = await fetch(url);
            const data = await response.json();
            
            assets.forEach(asset => {
                const symbol = asset.dataset.symbol;
                const price = data[symbol]?.usd || "N/A";
                asset.querySelector(".price").textContent = price !== "N/A" 
                    ? `$${price.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`
                    : "N/A";
            });
        } catch (error) {
            console.error("Error fetching crypto prices:", error);
        }
    }

    // Fetch stock prices from AlphaVantage
    async function fetchStockPrices(assets) {
        for (const asset of assets) {
            const symbol = asset.dataset.symbol;
            const url = `${alphaVantageAPI}?function=GLOBAL_QUOTE&symbol=${symbol}&apikey=${alphaVantageKey}`;
            
            try {
                const response = await fetch(url);
                const data = await response.json();
                const price = data["Global Quote"]["05. price"] || "N/A";
                asset.querySelector(".price").textContent = price !== "N/A" 
                    ? `$${parseFloat(price).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 })}`
                    : "N/A";
            } catch (error) {
                console.error(`Error fetching stock price for ${symbol}:`, error);
            }
        }
    }

    // Main function to load prices
    async function loadPrices() {
        const cryptoAssets = document.querySelectorAll('.dashboardassets[data-type="crypto"]');
        const stockAssets = document.querySelectorAll('.dashboardassets[data-type="stock"]');
        
        if (cryptoAssets.length) {
            await fetchCryptoPrices(Array.from(cryptoAssets));
        }
        
        if (stockAssets.length) {
