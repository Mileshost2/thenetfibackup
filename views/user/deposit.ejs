<script>
    document.getElementById('file-input').addEventListener('change', function() {
    const file = this.files[0]; // Get the first file
    const maxSize = 1 * 1024 * 1024; // 1MB in bytes
    const fileNameElement = document.getElementById('file-name');
    const fileErrorElement = document.getElementById('file-error');

    if (file) {
        if (file.size > maxSize) {
            fileErrorElement.style.display = 'block'; // Show error message
            this.value = ''; // Clear the file input
            fileNameElement.textContent = ''; // Clear the file name display
        } else {
            fileErrorElement.style.display = 'none'; // Hide error message
            fileNameElement.textContent = `Selected file: ${file.name}`; // Show the file name
        }
    } else {
        fileNameElement.textContent = ''; // Clear the file name display if no file is selected
    }
});

</script>

    <script>
        const methodSelect = document.getElementById('depositmethodname');
        methodSelect.addEventListener('change', handleFindMethod);
    
        function handleFindMethod(event) {
      const selectedMethod = event.target.value;
    
      fetch(`/api/depositmethods/${selectedMethod}`)
        .then(response => response.json())
        .then(data => {
          console.log(data); // Log the entire data object
          console.log(data.depositmethodname, data.depositaddress, data.depositqrcode); // Log individual values
          
          document.getElementById('depositaddress').value = data.depositaddress;

            // Check if depositqrcode is an array and has at least one item
            if (Array.isArray(data.depositqrcode) && data.depositqrcode.length > 0) {
                const qrCodeUrl = data.depositqrcode[0].url; // Access the first element of the array
                const qrCodeImg = document.getElementById('depositqrcode');
                if (qrCodeImg) {
                    qrCodeImg.src = qrCodeUrl; // Set the QR code image source
                }
            } else {
                console.error('No QR code URL available.');
            }

        })
        .catch(error => {
          console.error('Error fetching deposit method data:', error);
          // Handle error, e.g., display an error message to the user
        });
    }
    
    
    </script>
    <script src="/script/app.js"></script>
</body>
</html>