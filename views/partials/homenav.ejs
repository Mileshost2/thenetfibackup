<script>
  const navbar = document.querySelector(".navbar"); // Replace with your navbar selector

window.addEventListener("scroll", function() {
  const scrollPosition = window.scrollY; // Get scroll position
  const threshold = 50; // Adjust threshold as needed (in pixels)

  if (scrollPosition > threshold) {
    navbar.classList.add("navbar-scrolled");
  } else {
    navbar.classList.remove("navbar-scrolled");
  }
});

</script>

  <script>
    document.getElementById('toggleButton').addEventListener('click', function() {
      var icon = document.getElementById('toggleIcon');
      var container = document.getElementById('iconContainer');
      if (icon.classList.contains('fa-bars')) {
        icon.classList.remove('fa-bars');
        icon.classList.add('fa-times');
        container.style.display = 'flex';
      } else {
        icon.classList.remove('fa-times');
        icon.classList.add('fa-bars');
        container.style.display = 'none';
      }
    });

    document.getElementById('authToggleButton').addEventListener('click', function() {
      var authicon = document.getElementById('authToggleIcon');
      var authmodal = document.getElementById('authmodal');
      if (authicon.classList.contains('fa-user')) {
        authicon.classList.remove('fa-user');
        authicon.classList.add('fa-times');
        authmodal.style.display = 'flex';
      } else {
        authicon.classList.remove('fa-times');
        authicon.classList.add('fa-user');
        authmodal.style.display = 'none';
      }
    });
  </script>

  <script>
    window.addEventListener("load", function() {
  const preloader = document.getElementById("preloader");
  // const mainContent = document.getElementById("main-content");

  preloader.style.opacity = 0; // Fade out preloader smoothly
  preloader.style.transition = "opacity 1s ease-out";

  setTimeout(function() {
    preloader.style.display = "none";
    // mainContent.style.display = "block";
  }, 1000); // Delay removal for a second (adjust as needed)
});

  </script>
